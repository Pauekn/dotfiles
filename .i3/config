# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym oslash resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

# Bind applications
bindsym $mod+c exec chromium-browser
bindsym $mod+t exec emacs24
bindsym $mod+Shift+t exec thunar
bindsym $mod+Shift+f exec firefox

# Other keybindings
bindsym $mod+Shift+s exec shutdown -h now

# Volume control
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%-
bindsym XF86AudioMute exec amixer -D pulse sset Master 0% n

# Lock screen
bindsym $mod+o exec i3lock --color 000000 --ignore-empty-password --no-unlock-indicator --nofork

# Focus to windows
bindsym $mod+Shift+b [class="Chromium-browser"] focus
bindsym $mod+Shift+i [class="Terminal" title="irssi"] focus
bindsym $mod+Shift+m [class="Terminal" title="cmus"] focus

# Create modes

mode "mark_window" {
     bindsym 1 mark m1
     bindsym 2 mark m2
     bindsym 3 mark m3
     bindsym 4 mark m4
     bindsym 5 mark m5
     bindsym a mark ma
     bindsym b mark mb
     bindsym c mark mc
     bindsym d mark md
     bindsym e mark me

     # Switch window
     bindsym j focus left
     bindsym k focus down
     bindsym l focus up
     bindsym oslash focus right

     # Switch to workspace
     bindsym KP_1 workspace 1
     bindsym KP_2 workspace 2
     bindsym KP_3 workspace 3
     bindsym KP_4 workspace 4
     bindsym KP_5 workspace 5
     bindsym KP_6 workspace 6
     bindsym KP_7 workspace 7
     bindsym KP_8 workspace 8
     bindsym KP_9 workspace 9
     bindsym KP_0 workspace 10

     bindsym Return mode "default"
     bindsym Escape mode "default"
}

mode "go_to_window" {
     bindsym 1 [con_mark="m1"] focus
     bindsym 2 [con_mark="m2"] focus
     bindsym 3 [con_mark="m3"] focus
     bindsym 4 [con_mark="m4"] focus
     bindsym 5 [con_mark="m5"] focus
     bindsym KP_1 [con_mark="m1"] focus
     bindsym KP_2 [con_mark="m2"] focus
     bindsym KP_3 [con_mark="m3"] focus
     bindsym KP_4 [con_mark="m4"] focus
     bindsym KP_5 [con_mark="m5"] focus
     # Disabled 'a' and 'b' to play better with Cmus in this mode
     bindsym a [con_mark="ma"] focus
     #bindsym b [con_mark="mb"] focus
     #bindsym c [con_mark="mc"] focus
     bindsym d [con_mark="md"] focus
     bindsym e [con_mark="me"] focus

     bindsym Return mode "default"
     bindsym Escape mode "default"     
}

# Bind modes
bindsym $mod+g mode "go_to_window"
bindsym $mod+m mode "mark_window"